{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true
  },
  "exclude": [
    "lib",
    "test",
    "tools"
  ]
}
